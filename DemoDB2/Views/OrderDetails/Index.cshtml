@model IEnumerable<DemoDB2.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hóa đơn</h2>

<p>
    @Html.ActionLink("Thêm thông tin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Địa chỉ giao hàng
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderPro.AddressDeliverry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.NamePro)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
