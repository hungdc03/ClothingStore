@model DemoDB2.Models.AdminUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa thông tin</h2>

<div class="alert alert-warning">
    <strong>Attentions :</strong> Are you sure you want to delete this?
</div>
<div>
    <h4>AdminUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Admin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameUser)
        </dd>

        <dt>
            Cấp/ Vai trò
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleUser)
        </dd>

