@model DemoDB2.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHI TIẾT SẢN PHẨM</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img style="width: 100%;" src="~/img/@Model.ImagePro">
        </div>
        <div class="col-md-6">
            <h4>@Model.NamePro</h4>
            <p style="text-align: justify">
                <span style="font-weight: bold">Mô tả sản phẩm :</span> @Model.DecriptionPro
            </p>
            <p>
                <span>Size : </span> @Model.Size
            </p>
            <p class="price"> 
                Giá bán: <span style="color:red; font-size:24px;"> @Model.Price VNĐ
            </span>
            </p>
        <a class="btn btn-light" href="@Url.Action("AddToCart", "Cart", new {id = Model.ProductID })">
            ĐẶT MUA
        </a>
    </div>
</div>
</div>
